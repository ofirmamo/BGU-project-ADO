<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>

    <!-- Console Appender -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout
        pattern='{"date": %d{yyyy-MM-dd}  "level": %-5level %msg}%n' />
    </Console>
    
    <!-- File Appender -->
    <File name="File" fileName="../logs/app.json">
      <PatternLayout
        pattern='{"date": %d{yyyy-MM-dd}  "level": %-5level %msg}%n' />
    </File>

  </Appenders>
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="Console" />
      <AppenderRef ref="File" />
    </Root>
  </Loggers>
</Configuration>